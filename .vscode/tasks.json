  "version": "2.0.0",
  "tasks": [
    {
      "label": "git acp",
      "command": "git add --all && git commit -m 'talos deployment'",
      "type": "shell",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "rebuild talos",
      "command": "ssh talos -- ./github/nixdots/quickbuild",
      "type": "shell",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "dependsOn": "git acp"
    }
  ]
}